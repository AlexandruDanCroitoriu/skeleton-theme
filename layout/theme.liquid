<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="bg-white dark:bg-gray-950 scheme-light dark:scheme-dark">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}
    
    {% comment %} <script src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1" type="module"></script> {% endcomment %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    <script type="module" src="{{ 'app.js' | asset_url }}"></script>
  </body>
</html>
